<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:paddingBottom="15dp"
    android:gravity="center">
    <ProgressBar 
        android:id="@+id/drop_down_to_refresh_list_progress"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleSmall"/>
    <ImageView
        android:id="@+id/drop_down_to_refresh_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/drop_down_to_refresh_list_arrow"/>
    <TextView
        android:id="@+id/drop_down_to_refresh_list_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/drop_down_to_refresh_list_header_font_color"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:id="@+id/drop_down_to_refresh_list_last_updated_text"
        android:layout_below="@+id/drop_down_to_refresh_list_text"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/drop_down_to_refresh_list_header_font_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>
</RelativeLayout>
